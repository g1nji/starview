<?xml version="1.0" encoding="UTF-8"?>

<!-- 마이바티스 3 Mapper DTD -->
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="seulgi.dao.face.AdminProductDao">

	<select id="selectAll" resultType="seulgi.dto.AdminProduct">
		SELECT * FROM goods
	</select>
	
	<insert id="insert" parameterType="seulgi.dto.AdminProduct">
		INSERT INTO goods (g_id, g_name, g_price, g_detail)
		VALUES (goods_seq.nextval, #{gName }, #{gPrice }, #{gDetail })
	</insert>

</mapper>