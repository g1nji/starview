<?xml version="1.0" encoding="UTF-8"?>

<!-- 마이바티스 3 Mapper DTD -->
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="seulgi.dao.face.AdminProductDao">

	<select id="selectAll" resultType="seulgi.dto.AdminProduct">
		SELECT * FROM (
			SELECT rownum rnum, G.* FROM (
				SELECT * FROM goods
			) G
		) goods
		WHERE rnum BETWEEN #{startNo } AND #{endNo }
	</select>
	
	<select id="selectCntAll" resultType="int">
		SELECT count(*) FROM goods
	</select>
	
	<select id="selectProd" resultType="seulgi.dto.AdminProduct" parameterType="seulgi.dto.AdminProduct">
		SELECT * FROM goods
		WHERE g_id = #{gId}
	</select>

	<insert id="insertProd" parameterType="seulgi.dto.AdminProduct">
		INSERT INTO goods (g_id, g_name, g_price, g_detail)
		VALUES (goods_seq.nextval, #{gName }, #{gPrice }, #{gDetail })
	</insert>
	
	<insert id="insertFile" parameterType="seulgi.dto.AdminProductImage">
		INSERT INTO goods_img ( img_id, g_id, file_name)
		VALUES ( goods_img_seq.nextval, #{gId }, #{fileName })
	</insert>

	<select id="selectImageFile" resultType="seulgi.dto.AdminProductImage" parameterType="seulgi.dto.AdminProduct">
		SELECT * FROM goods_img
		WHERE g_id = #{gId}
	</select>
</mapper>